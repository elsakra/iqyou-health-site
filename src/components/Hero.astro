---
// Hero component
---

<section class="relative bg-brand-cream overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-20">
    <img 
      src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288498/auto-site-builder/IQYOU%20Health/image_15.jpg" 
      alt="" 
      class="w-full h-full object-cover"
    />
  </div>
  
  <div class="container-custom relative z-10">
    <div class="section-spacing">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="space-y-8">
          <div class="space-y-6">
            <h1 class="text-4xl lg:text-6xl font-serif font-normal text-brand-dark leading-tight">
              Welcome to a World of 
              <span class="italic font-light text-brand-orange">Personalized</span> 
              Care
            </h1>
            <p class="text-xl text-brand-dark/80 leading-relaxed max-w-2xl">
              A unique pharmacy that puts YOU first. Discover thousands of nutritional supplements and herbs with expert guidance from experienced practitioners.
            </p>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <button class="btn-primary text-lg px-10 py-4">
              Shop Now
            </button>
            <button class="btn-secondary text-lg px-10 py-4">
              Book Free Consultation
            </button>
          </div>
          
          <!-- Trust Indicators -->
          <div class="flex items-center space-x-8 pt-8">
            <div class="flex items-center space-x-2">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288497/auto-site-builder/IQYOU%20Health/image_10.png" 
                alt="Same Day Shipping" 
                class="w-8 h-8"
              />
              <span class="text-sm font-medium text-brand-dark">Same-Day Shipping</span>
            </div>
            <div class="flex items-center space-x-2">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288497/auto-site-builder/IQYOU%20Health/image_11.png" 
                alt="100 Day Return" 
                class="w-8 h-8"
              />
              <span class="text-sm font-medium text-brand-dark">100-Day Return</span>
            </div>
            <div class="flex items-center space-x-2">
              <img 
                src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288497/auto-site-builder/IQYOU%20Health/image_12.png" 
                alt="Secure Checkout" 
                class="w-8 h-8"
              />
              <span class="text-sm font-medium text-brand-dark">100% Secure</span>
            </div>
          </div>
        </div>
        
        <!-- Right Content - Image/Visual -->
        <div class="relative">
          <div class="bg-white rounded-3xl p-8 shadow-2xl">
            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <h3 class="text-2xl font-serif text-brand-dark">Customer Reviews</h3>
                <div class="flex items-center space-x-1">
                  <span class="text-2xl font-bold text-brand-orange">4.96</span>
                  <div class="flex text-brand-orange">
                    ★★★★★
                  </div>
                </div>
              </div>
              
              <div class="bg-gray-50 rounded-2xl p-6">
                <div class="flex items-start space-x-4">
                  <img 
                    src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288498/auto-site-builder/IQYOU%20Health/image_17.jpg" 
                    alt="Customer Review" 
                    class="w-full h-48 object-cover rounded-xl"
                  />
                </div>
              </div>
              
              <div class="text-center">
                <p class="text-gray-600 text-sm">Based on 389+ verified reviews</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>