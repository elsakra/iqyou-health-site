---
// Health Concerns component
---

<section class="section-spacing bg-white relative">
  <!-- Top decoration -->
  <div class="absolute top-0 left-0 right-0 h-24">
    <img 
      src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288514/auto-site-builder/IQYOU%20Health/image_59.png" 
      alt="" 
      class="w-full h-full object-cover"
    />
  </div>

  <div class="container-custom relative z-10 pt-12">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-serif text-brand-dark mb-6">
        Target Your 
        <span class="italic text-brand-orange">Health Concerns</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Find specialized solutions for your specific health needs with expert-curated products and personalized guidance.
      </p>
    </div>

    <!-- Health Concerns Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6 mb-16">
      <!-- Allergies & Sinus -->
      <div class="group cursor-pointer">
        <div class="card text-center p-6 h-full hover:shadow-xl transition-all duration-300">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288509/auto-site-builder/IQYOU%20Health/image_47.png" 
            alt="Allergies & Sinus" 
            class="w-12 h-12 mx-auto mb-4 group-hover:scale-110 transition-transform"
          />
          <h3 class="text-sm font-medium text-brand-dark group-hover:text-brand-orange transition-colors">
            Allergies & Sinus
          </h3>
        </div>
      </div>

      <!-- Brain Health -->
      <div class="group cursor-pointer">
        <div class="card text-center p-6 h-full hover:shadow-xl transition-all duration-300">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288509/auto-site-builder/IQYOU%20Health/image_48.png" 
            alt="Brain Health" 
            class="w-12 h-12 mx-auto mb-4 group-hover:scale-110 transition-transform"
          />
          <h3 class="text-sm font-medium text-brand-dark group-hover:text-brand-orange transition-colors">
            Brain Health
          </h3>
        </div>
      </div>

      <!-- Digestive Health -->
